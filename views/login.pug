doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css")
    script(src="scriptAuth.js" defer)
    style.
      .degradadoBody {
        background: linear-gradient(135deg, #00ff6a, #00c6ff);
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .login-form {
        background-color: white;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
      }
      .inputses {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      .btn-login {
        background-color: #00c6ff; 
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        width: 100%;
        cursor: pointer;
      }
      .btn-login:hover {
        background-color: #00a3d1; 
      }
      .text-muted {
        font-size: 15px;
      }
  body
    span(class="letraChida text-center degradadoBody w-100 h10" style="font-size: 30px; color: grey") Sistema Lis WilgonLab 2024
    span(class="letraChida text-center degradadoBody w-100 h10" style="font-size: 15px; color: white") Sistema creado por Wilson Gonzalo Ortiz
    div(class="w-100 h-100 position-absolute degradadoBody")
      form(class="login-form d-flex flex-column align-items-center justify-content-center p-5 mx-5 text-white shadow-sm")
        span(class="text-dark letraChida text-left w-100 h1") Login
        //-span(class="text-muted letraChida text-left w-100 h5") logueate para continuar
        //-input(class="inputses my-3 rounded" type="email" id="email" name="email" placeholder="Email" value="wilgon@gmail.com" readonly)
        //-input(class="inputses rounded" type="password" id="key" name="key" placeholder="Password" )
        input(class="inputses my-3 rounded" type="email" id="email" name="email" placeholder="Email" value="wilgon@gmail.com")
        input(class="inputses rounded" type="password" id="key" name="key" placeholder="Password" )
        
        div(class="mt-4 w-100")
          <button type="button" class="btn-login radius w-100 letraChida shadow-sm h5" id="btnLogin">Login</button>
        div(class="text-danger letraChida text-center w-100 mt-3 d-none" style="font-size: 15px" id="messageError") 
