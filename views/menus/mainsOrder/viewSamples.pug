doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Muestras de la Orden
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css")
    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet")
    script(src="https://kit.fontawesome.com/a076d05399.js", crossorigin="anonymous")
  body
    .d-flex.flex-row.bg-color.rounded-top.text-white.w-100.align-items-center
      p(class="letraChida h5 p-3") Muestras requeridas paciente: #{order.User.first_name || 'Desconocido'} #{order.User.last_name || 'Desconocido'} -ID- #{order.User.id}:
      //- para id de usuario ##{order.User.id} y dni#{order.User.dni || 'Desconocido'}:
      input(class="d-none" value=order.id id="orderId")
      input(class="d-none" value=order.User.id id="userId")
      input(class="d-none" value=order.User.dni id="userDni")
      input(class="d-none" value=order.User.first_name id="userFirstName")
      input(class="d-none" value=order.User.last_name id="userLastName")
      .position-relative.mx-1
        input(class="inputSearch rounded-pill h6 p-2" placeholder="Buscar" id="nameSampleSearch" name="nameSampleSearch" type="text")
        .d-flex.align-items-center.position-absolute.end-0.top-50.px-2
          i(class="fa-solid fa-magnifying-glass fa-xs agrandar" style="color: rgba(255, 255, 255, 0.648);" id="btnSearchSample")
    .table-responsive.mt-4#tabla-samples
      table.table.table-hover.h6.mt-3.rounded.text-center
        thead
          tr
            th(scope="col") Orden ID
            th(scope="col") Examen
            th(scope="col") Tipo de Muestra
            th(scope="col") IMPRIMIR ETIQUETA
        tbody
          each sample in samples
            tr
              th(scope="row") #{sample.orderId}
              td #{sample.examName}
              td #{sample.sampleType}
              if role  !== "Administrative"                
                td
                  .w-100.text-center
                    a(href="" id='' class="btnDeliverSamples")
                      i(class="fa-solid fa-lg fa-paper-plane px-1 text-success agrandar")              
    script(src="/scriptsPatient.js")
