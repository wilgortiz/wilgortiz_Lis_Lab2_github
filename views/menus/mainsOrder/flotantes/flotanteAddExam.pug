doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Agregar Examen a la Orden
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css")
    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet")
    script(src="https://kit.fontawesome.com/a076d05399.js", crossorigin="anonymous")
  body
    .position-relative.p-5.w-100.bg-white.shadow-sm.rounded
      .position-absolute.top-0.end-0.m-2
        i(class="fa-solid fa-circle-xmark text-danger agrandar" id="btnCerrarFlot")
      legend(class="letraChida h4") Agregar Examen a la orden:
      p(class="letraChida h6 text-secondary") Selecciona el examen
      .d-flex.flex-row.bg-color.rounded-top.text-white.w-100.align-items-center
        p(class="letraChida h5 p-3") Exámenes:
        .position-relative.mx-1
          input(class="inputSearch rounded-pill h6 p-2" placeholder="Buscar examen" id="examSearch" name="examSearch" type="text")
          .d-flex.align-items-center.position-absolute.end-0.top-50.px-2
            i(class="fa-solid fa-magnifying-glass fa-xs agrandar" style="color: rgba(255, 255, 255, 0.648);" id="btnSearchExam")
      div(class="table-responsive.mt-4#tabla-exams")
        table.table.table-hover.h6.mt-3.rounded
          thead
            tr
              th(scope="col") ID
              th(scope="col") Nombre
              th(scope="col") ¿Activo?
              th(scope="col") Abreviatura
              th(scope="col") Detalle
              th(scope="col") Agregar
          tbody
            each exam in exams
              tr(class= exam.active ? '' : 'table-danger')
                th(scope="row") #{exam.id}
                td #{exam.name}
                td #{exam.active ? 'Sí' : 'No'}
                td #{exam.abbreviation}
                td #{exam.detail}
                td
                  div(class="w-100 text-center")
                    a(href="#" id=exam.id class="btnRegExam")
                      i(class="fa-solid fa-plus px-1 text-success agrandar")
    script(src="/scriptsPatient.js")

    input(type="hidden" id="orderId" value=orderId)
