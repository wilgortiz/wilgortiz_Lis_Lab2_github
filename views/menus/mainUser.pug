div(class="position-absolute top-50 start-50 translate-middle d-flex invisible" id="invisible" style="z-index:1")
    div.border.rounded(id="contenedor-flotante")
div(class="mt-3 p-4 border shadow-sm bg-white d-flex flex-column w-100 h-100 rounded" id="viewUser") 
    p(class="letraChida h4") 
    //-p(class="letraChida h4") Gestor de usuarios

    //-span(class="letraChida h6 text-secondary") Create User or search for an existing one to modify or delete.
    .row.border.my-4.rounded.bg-white.shadow-sm(id="contenido-user")
      .d-flex.flex-row.bg-color.rounded-top.text-white.w-100.align-items-center
           p(class="letraChida h5 p-3") Usuario:
           .position-relative.mx-1
                input(class="inputSearch rounded-pill h6 p-2" placeholder="Dni" id="dniUserSearch" name="dniUserSearch" type="text")
                .d-flex.align-items-center.position-absolute.end-0.top-50.px-2
                    i(class="fa-solid fa-magnifying-glass fa-xs agrandar" style="color: rgba(255, 255, 255, 0.648);" id="btnSearchUser")
           .d-flex.justify-content-center.p-3.w-100.align-items-end.flex-column
                i(class="fa-solid fa-plus text-white agrandar h4" id="btnAddUser") 
      div(class="table-responsive mt-4" id="tabla-users")
                    table(class="table  table-hover h6 mt-3 rounded")
                        thead(class="")
                            tr(class="")
                                th(scope="col") NÂ°
                                th(scope="col") Nombre
                                th(scope="col") Dni
                                th(scope="col") Rol
                                th(scope="col") Email 
                                th(scope="col") Actualizar 
                                th(scope="col") Eliminar
                        tbody
                            each user in users
                                    tr(class= user.active ? '' : 'table-danger')
                                        th(scope="row")  #{user.id}
                                        td #{user.first_name+' '+user.last_name}
                                        td #{user.dni}
                                        td #{user.rol}
                                        td #{user.email}
                                        td 
                                            div(class="w-100")
                                                a(href="" id=user.id class="btnUpdateUser")
                                                    i(class="fa-solid fa-pen px-1 text-warning agrandar")
                                        td 
                                            div(class="w-100")
                                                a(href="" id=user.id class="btnDeleteUser")
                                                    i(class="fa-solid fa-circle-minus px-1 text-danger agrandar")